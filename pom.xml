<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.inrupt</groupId>
    <artifactId>inrupt-parent</artifactId>
    <version>0.1.0-SNAPSHOT</version>
    <relativePath>./parent</relativePath>
  </parent>

  <artifactId>inrupt-client</artifactId>
  <version>0.1.0-SNAPSHOT</version>
  <name>Inrupt Solid Client</name>
  <packaging>pom</packaging>

  <properties>
      <!-- testing -->
      <junit.jupiter.version>5.8.1</junit.jupiter.version>
  </properties>

  <modules>
    <module>authentication</module>
    <module>build-tools</module>
    <module>http</module>
    <module>parent</module>
    <module>vocabulary</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.junit.jupiter</groupId>
        <artifactId>junit-jupiter-engine</artifactId>
        <version>${junit.jupiter.version}</version>
      </dependency>
      <dependency>
        <groupId>org.junit.jupiter</groupId>
        <artifactId>junit-jupiter-api</artifactId>
        <version>${junit.jupiter.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <scm>
    <connection>scm:git:https://github.com/inrupt/solid-client-java.git</connection>
    <developerConnection>scm:git:https://github.com/inrupt/solid-client-java.git</developerConnection>
    <url>https://github.com/inrupt/solid-client-java</url>
    <tag>HEAD</tag>
  </scm>

  <licenses>
    <license>
      <name>MIT</name>
      <url>https://opensource.org/licenses/MIT</url>
    </license>
  </licenses>

  <organization>
    <name>Inrupt, Inc.</name>
    <url>https://inrupt.com</url>
  </organization>

</project>
